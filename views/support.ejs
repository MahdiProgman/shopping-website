<!DOCTYPE html>
<html lang="fa" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>پشتیبانی | وبسایت فروشگاهی</title>
    <link rel="icon" type="image/x-icon" href="/assets/icons/brand.svg" />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/support.css" />
    <link rel="stylesheet" href="/libs/sweetalert2/sweetalert2.min.css" />
  </head>
  <body>
    <div class="overlay hidden"></div>
    <%- include("includes/drawer") %>
    <div class="main">
      <%- include("includes/header") %>
      <main>
        <section class="support-section">
          <h1>پشتیبانی</h1>
          <% if(supportText) { %>
          <p><%= supportText.value %></p>
          <% } %> <% if(supportCards) { %>
          <div class="contact">
            <% supportCards.map(supportCard => { %>
            <div class="contact-way">
              <img src="<%= supportCard.image %>" alt="" />
              <h3><%= supportCard.title %></h3>
              <p>
                <%= supportCard.description.replace('[phone_number]',
                toPersianDigitsHelper(getValueByNameHelper(footerData,
                'phone_number'))) %>
              </p>
            </div>
            <% }); %>
          </div>
          <% } %>
        </section>
      </main>
      <div class="header-overlay hidden"></div>
      <%- include("includes/footer") %>
    </div>
    <script src="/libs/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="/libs/swiper/swiper-bundle.min.js"></script>
    <script src="/scripts/global.js"></script>
    <script src="/scripts/index.js"></script>
  </body>
</html>
